@import './mixins.styl';

#app {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;

    .content {
        >div {
            display: none;

            &.on {
                display: block;
            }

            >section {
                .header {
                    background-color: #02a774;
                    position: fixed;
                    left: 0;
                    top: 0;
                    height: 45px;
                    width: 100%;
                    background-color: #02a774;

                    .header_title {
                        position: absolute;
                        width: 50%;
                        left: 50%;
                        top: 50%;
                        transform: translate(-50%, -50%);
                        color: white;
                        text-align: center;
                        font-size: 20px;
                    }
                }

                &.msite {
                    width: 100%;

                    .msite_header {
                        position: fixed;
                        top: 0;
                        left: 0;
                        height: 45px;
                        width: 100%;
                        background-color: #02a774;
                        z-index: 100;

                        .header_serarch {
                            position: absolute;
                            left: 15px;
                            top: 50%;
                            transform: translateY(-50%);

                            .icon-sousuo1 {
                                font-size: 25px;
                                color: white;
                            }
                        }

                        .header_title {
                            position: absolute;
                            width: 50%;
                            left: 50%;
                            top: 50%;
                            transform: translate(-50%, -50%);
                            color: white;
                            text-align: center;

                            .header_title_text {
                                font-size: 20px;
                                display: block;
                            }
                        }

                        .header_login {
                            position: absolute;
                            right: 15px;
                            top: 50%;
                            transform: translateY(-50%);
                            color: white;
                            font-size: 15px;
                        }
                    }

                    .msite_nav {
                        margin-top: 45px;
                        height: 200px;
                        background-color: white;

                        .swiper-container {
                            height: 100%;
                            width: 100%;

                            .swiper-wrapper {
                                width: 100%;
                                height: 100%;

                                .swiper-slide {
                                    display: flex;
                                    justify-content: center;
                                    align-items: flex-start;
                                    flex-wrap: wrap;

                                    .link_to_food {
                                        width: 25%;

                                        .food_container {
                                            width: 100%;
                                            text-align: center;
                                            padding-bottom: 10px;
                                            font-size: 0;

                                            img {
                                                width: 50px;
                                                height: 50px;
                                            }
                                        }

                                        span {
                                            display: inline-block;
                                            width: 100%;
                                            text-align: center;
                                            font-size: 13px;
                                        }
                                    }
                                }
                            }

                            .swiper-pagination-bullet-active {
                                background-color: #02a774;
                            }
                        }
                    }

                    .msite_shop_list {
                        margin-top: 10px;
                        background-color: white;
                        top-border-1px(#e4e4e4);
                        padding-bottom: 50px;

                        .shop_header {
                            padding: 10px 10px 0;

                            i {
                                font-size: 12px;
                                color: #999;
                            }

                            .shop_header_title {
                                font-size: 14px;
                                color: #999;
                                line-height: 20px;
                            }
                        }

                        .shop_container {
                            width: 100%;

                            .shop_list {
                                width: 100%;

                                .shop_li {
                                    >a {
                                        clearFix();
                                        display: block;
                                        box-sizing: border-box;
                                        width: 100%;
                                        padding: 15px 8px;
                                        bottom-border-1px(#f1f1f1);
                                    }

                                    .shop_left {
                                        float: left;
                                        width: 23%;
                                        box-sizing: border-box;
                                        padding-right: 10px;

                                        .shop_image {
                                            width: 100%;
                                        }
                                    }

                                    .shop_right {
                                        float: right;
                                        width: 77%;
                                        box-sizing: border-box;

                                        .shop_detail_header {
                                            clearFix();

                                            .shop_title {
                                                float: left;
                                                width: 140px;
                                                color: #333;
                                                font-size: 16px;
                                                line-height: 16px;
                                                font-size: bold;

                                                &::before {
                                                    content: '品牌';
                                                    display: inline-block;
                                                    font-size: 11px;
                                                    line-height: 11px;
                                                    color: #333;
                                                    background-color: #ffd930;
                                                    vertical-align: center;
                                                    padding: 2px 2px;
                                                    border-radius: 2px;
                                                }
                                            }

                                            .shop_detail_ul {
                                                clearFix();
                                                float: right;

                                                .supports {
                                                    float: left;
                                                    font-size: 10px;
                                                    color: #999;
                                                    border: 1px solid #f1f1f1;
                                                    border-radius: 2px;
                                                    padding: 0 2px;
                                                }
                                            }
                                        }

                                        .shop_rating_order {
                                            display: flex;
                                            justify-content: space-between;
                                            margin-top: 18px;
                                            margin-bottom: 10px;

                                            .shop_rating_order_left {
                                                display: flex;
                                                align-items: center;

                                                .star {
                                                    float: left;
                                                    font-size: 0;
                                                    background-color: red;

                                                    .star-item {
                                                        display: inline-block;
                                                        background-repeat: no-repeat;
                                                    }

                                                    &.star-24 {
                                                        .star-item {
                                                            width: 10px;
                                                            height: 10px;
                                                            margin-right: 3px;
                                                            background-size: 10px 10px;
                                                        }
                                                    }
                                                }

                                                .rating_section {
                                                    font-size: 10px;
                                                    margin-left: 4px;
                                                    color: #ff6000;
                                                }

                                                .order_section {
                                                    font-size: 10px;
                                                    color: #666;
                                                    transform: scale(0.8);
                                                }
                                            }

                                            .shop_rating_order_right {
                                                float: right;
                                                font-size: 12px;
                                                border: 1px solid #02a774;
                                                transform: scale(0.7);
                                            }
                                        }

                                        .shop_distance {
                                            width: 100%;
                                            display: flex;
                                            align-items: center;
                                            justify-content: flex-start;
                                            font-size: 12px;
                                            color: #666;
                                            transform: scale(0.9);
                                            transform-origin: 0;

                                            .segmentation {
                                                color: #ccc;
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

                &.search {
                    .search_form {
                        display: flex;
                        width: 100%;
                        margin-top: 45px;
                        padding: 12px 8px;
                        background-color: white;
                        box-sizing: border-box;

                        .search_input {
                            flex: 8;
                            background-color: #f2f2f2;
                            font-size: 14px;
                            outline: none;
                        }

                        input {
                            height: 35px;
                            padding: 0 4px;
                            font-weight: bold;
                        }

                        .search_submit {
                            flex: 2;
                            background-color: #02a774;
                            color: white;
                            border-radius: 3px;
                            font-size: 16px;
                            margin-left: 10px;
                        }
                    }
                }

                &.order {
                    .order_no_login {
                        width: 60%;
                        padding-top: 140px;
                        margin: 0 auto;
                        text-align: center;

                        >img {
                            width: 100%;
                        }

                        >h3 {
                            padding: 10px 0;
                            font-size: 17px;
                            color: #6a6a6a;
                        }

                        >button {
                            color: white;
                            font-size: 14px;
                            border-radius: 5px;
                            padding: 10px 20px;
                            outline: none;
                            background-color: #02a774;
                            border: 0;
                        }
                    }
                }

                &.profile {
                    margin-top: 45px;
                    width: 100%;

                    .profile-number {
                        padding: 20px 10px;
                        background-color: #02a774;
                        // width: 100%;
                        display: flex;
                        align-items: center;
                        justify-content: space-between;

                        > div {
                            display: flex;

                            .profile_image {
                                .icon-user {
                                    font-size: 62px;
                                    color: #e4e4e4;
                                }
                            }

                            .user-info {
                                color: white;
                                padding: 10px 10px;
                                display: flex;
                                flex-direction: column;
                                justify-content: space-between;

                                p {
                                    span {
                                        display: inline-block;
                                        line-height: 1;

                                        .icon-shouji {
                                            font-size: 20px;
                                        }
                                    }

                                    &.user-info-mobile {
                                        margin-top: 10px;
                                        display: flex;
                                        align-items: center;
                                        margin-left: -2px;

                                        .user-info-no-mobile-number {
                                            font-size: 14px;
                                        }
                                    }
                                }

                                .user-info-top {
                                    font-size: 18px;
                                    font-weight: bold;
                                }
                            }
                        }

                        .arrow {
                            font-size: 5px;
                            color: white;
                        }
                    }

                    .profile_info_data {
                        display: flex;
                        bottom-border-1px(#e4e4e4);
                        background-color: white;

                        .info_data_link {
                            display: flex;
                            align-items: center;
                            flex-direction: column;
                            flex: 1;
                            // background-color: red;
                            border-right: 1px solid #f1f1f1;

                            .info_data_top {
                                padding: 15px 5px 10px;
                                color: black;
                                font-size: 14px;

                                > span {
                                    color: #f90;
                                    font-size: 30px;
                                }
                            }

                            .info_data_bottom {
                                font-size: 14px;
                                margin-bottom: 10px;
                            }
                        }
                    }

                    .profile_my_order {
                        margin-top: 10px;
                        background-color: white;

                        .my_order {
                            display: inline-block;
                            display: flex;
                            align-items: center;
                            padding-left: 15px;

                            >span:nth-child(1) {
                                display: flex;
                                align-items: center;
                                text-align: center;

                                i {
                                    display: inline-block;
                                    width: 25px;
                                    height: 25px;
                                    line-height: 25px;
                                }
                            }

                            .icon-dingdan1 {
                                font-size: 25px;
                            }

                            .my_order_div {
                                bottom-border-1px(#e4e4e4);
                                display: flex;
                                justify-content: space-between;
                                align-items: center;
                                width: 100%;
                                padding: 18px 10px 18px 8px;
                                font-size: 16px;
                                color: #333;

                                span {
                                    font-size: 16px;
                                }

                                .icon-youjiantou {
                                    font-size: 10px;
                                    color: #bbb;
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    .footer_guide {
        top-border-1px(#e4e4e4);
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 50px;
        background-color: white;
        display: flex;
        z-index: 201;

        .guide_item {
            display: flex;
            flex: 1;
            flex-direction: column;
            text-align: center;
            margin: 5px;
            align-items: center;

            &.on {
                color: blue;
            }

            span {
                font-size: 12px;
                margin-top: 2px;
                margin-bottom: 2px;

                .iconfont {
                    font-size: 22px;
                }
            }
        }
    }

    >.off {
        display: none;
    }

    > .on {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 201;

        .loginContainer {
            width: 100%;
            height: 100%;
            background-color: white;

            .loginInner {
                padding-top: 60px;
                width: 80%;
                margin: 0 auto;

                .login_header {
                    .login_logo {
                        font-size: 40px;
                        font-weight: bold;
                        color: #02a774;
                        text-align: center;
                    }

                    .login_header_title {
                        display: flex;
                        justify-content: center;
                        margin-top: 40px;

                        >a {
                            font-size: 14px;
                            color: #333;
                            padding-bottom: 4px;

                            &.on {
                                color: #02a774;
                                font-weight: 700;
                                border-bottom: 2px solid #02a774;
                            }
                        }

                        >a:nth-child(1) {
                            margin-right: 10px;
                        }

                        >a:nth-child(2) {
                            margin-left: 10px;
                        }
                    }
                }
            }
        }
    }
}